/* 音频播放器组件样式 - 使用统一设计系统 */

.audio-player {
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-medium);
  position: relative;
  overflow: hidden;
}

.audio-player::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(
    90deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
}

/* ===== 播放控制区域 ===== */
.player-controls {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
  color: var(--text-white);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.play-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-medium);
}

.play-btn.playing {
  background: linear-gradient(135deg, var(--accent-color) 0%, #45a049 100%);
}

/* ===== 时间显示 ===== */
.time-display {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  font-size: var(--font-sm);
  color: var(--text-secondary);
  font-weight: 500;
  min-width: 120rpx;
}

.current-time {
  color: var(--primary-color);
  font-weight: 600;
}

.duration {
  color: var(--text-light);
}

/* ===== 进度条 ===== */
.progress-container {
  flex: 1;
  position: relative;
  height: 8rpx;
  background-color: var(--bg-secondary);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(
    90deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
  border-radius: 4rpx;
  transition: width 0.1s ease;
  position: relative;
}

.progress-bar::after {
  content: "";
  position: absolute;
  right: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* ===== 音量控制 ===== */
.volume-control {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
}

.volume-icon {
  font-size: var(--font-md);
  color: var(--text-light);
}

.volume-slider {
  flex: 1;
  height: 6rpx;
  background-color: var(--bg-secondary);
  border-radius: 3rpx;
  position: relative;
}

.volume-progress {
  height: 100%;
  background: linear-gradient(90deg, var(--secondary-color) 0%, #e64a19 100%);
  border-radius: 3rpx;
  width: 70%;
}

/* ===== 加载状态 ===== */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  color: var(--text-light);
  font-size: var(--font-sm);
}

.loading-dot {
  width: 8rpx;
  height: 8rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  animation: loading-bounce 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}
.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading-bounce {
  0%,
  80%,
  100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* ===== 错误状态 ===== */
.error {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: var(--secondary-color);
  font-size: var(--font-sm);
  padding: var(--spacing-sm);
  background-color: rgba(216, 67, 21, 0.1);
  border-radius: var(--border-radius);
  border-left: 4rpx solid var(--secondary-color);
}

.error-icon {
  font-size: var(--font-md);
}

/* ===== 响应式设计 ===== */
@media (max-width: 600rpx) {
  .audio-player {
    padding: var(--spacing-md);
  }

  .play-btn {
    width: 60rpx;
    height: 60rpx;
    font-size: var(--font-md);
  }

  .time-display {
    font-size: var(--font-xs);
    min-width: 100rpx;
  }

  .volume-control {
    margin-top: var(--spacing-sm);
  }
}



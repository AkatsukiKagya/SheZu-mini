/* 测试页面样式 - 使用统一设计系统 */

.container {
  background: linear-gradient(135deg, var(--bg-light) 0%, #e8f4fd 100%);
  min-height: 100vh;
  padding: var(--spacing-lg);
}

/* ===== 页面标题 ===== */
.title {
  font-size: var(--font-title);
  font-weight: 600;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg) 0;
  background: linear-gradient(135deg, var(--bg-primary) 0%, #f8f9fa 100%);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
}

/* ===== 视频播放器 ===== */
.video-player {
  width: 100%;
  height: 400rpx;
  background-color: #000;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-medium);
  margin-bottom: var(--spacing-lg);
}

/* ===== 控制按钮区域 ===== */
.controls {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
  align-items: center;
  margin-bottom: var(--spacing-xl);
}

.replay-btn {
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
  color: var(--text-white);
  border: none;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-md);
  font-weight: 500;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  min-height: 80rpx;
  min-width: 200rpx;
}

.replay-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-medium);
}

/* ===== 导航按钮 ===== */
.nav-btn {
  background: linear-gradient(135deg, var(--secondary-color) 0%, #e64a19 100%);
  color: var(--text-white);
  border: none;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-md);
  font-weight: 500;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  min-height: 80rpx;
  min-width: 200rpx;
}

.nav-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-medium);
}

/* ===== 音频播放器测试区域 ===== */
.audio-test {
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  margin-bottom: var(--spacing-lg);
}

.audio-test-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: var(--spacing-md);
  text-align: center;
}

/* ===== 状态指示器 ===== */
.status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  background-color: var(--bg-primary);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light);
  margin-bottom: var(--spacing-md);
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--accent-color);
}

.status-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

/* ===== 测试信息 ===== */
.test-info {
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  margin-bottom: var(--spacing-lg);
}

.test-info-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: var(--spacing-md);
  display: block;
}

.test-info-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  line-height: 1.6;
  display: block;
  margin-bottom: var(--spacing-sm);
}

/* ===== 响应式设计 ===== */
@media (max-width: 600rpx) {
  .container {
    padding: var(--spacing-md);
  }

  .title {
    font-size: var(--font-xl);
    padding: var(--spacing-md) 0;
  }

  .video-player {
    height: 300rpx;
  }

  .controls {
    gap: var(--spacing-sm);
  }

  .replay-btn,
  .nav-btn {
    min-width: 160rpx;
    font-size: var(--font-sm);
  }
}

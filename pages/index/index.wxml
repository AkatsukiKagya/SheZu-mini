<view class="container">

<!-- 语言切换器 -->
<language-switcher position="top-right" bind:languageChanged="onLanguageChanged"></language-switcher>

<!-- Banner -->
<view class="banner">
    <image class="carousel-image" src="{{images[currentIndex]}}" mode="aspectFill"></image>
    <!-- 左右箭头 -->
    <view class="carousel-arrow left" bindtap="prevImage">{{ prevImage }}</view>
    <view class="carousel-arrow right" bindtap="nextImage">{{ nextImage }}</view>
    <!-- 图片上的文字 -->
    <view class="banner-mask"></view>
    <view class="banner-text">
        <text class="banner-title">{{texts.bannerTitle}}{{ nextLine }}</text>
        <text class="banner-desc">{{texts.bannerDesc}}</text>
    </view>
    <!-- 轮播指示器 -->
    <view class="carousel-indicators">
        <view class="indicator" wx:for="{{images}}" wx:key="index" 
              class="{{index === currentIndex ? 'active' : ''}}"
              bindtap="goToImage" data-index="{{index}}">
        </view>
    </view>
</view>

<!-- 欢迎语 -->
<view class="welcome">
    <text class="welcome-title">{{texts.welcomeTitle}}</text>
    <text class="welcome-text">{{texts.welcomeText1}}</text>
    <text class="welcome-text">{{texts.welcomeText2}}</text>
</view>

<!-- 项目介绍 -->
<view class="heritage">
    <view class="heritage-content">
        <view class="heritage-text">
            <text class="heritage-title">{{texts.projectTitle}}</text>
            <text class="heritage-text-content">{{texts.projectText1}}</text>
            <text class="heritage-text-content">{{texts.projectText2}}</text>
            <view class="heritage-link">
                <navigator url="/pages/SheZu/SheZu" class="link-btn">
                    <text>{{texts.learnMore}}</text>
                </navigator>
            </view>
        </view>
    </view>
</view>

<!-- 工艺流程 -->
<view class="process">
    <text class="process-title">{{texts.artFormsTitle}}</text>
    <view class="process-steps">
        <view class="step">
            <image src="/assets/images/1.png" mode="aspectFill"></image>
            <text class="step-title">{{texts.laborSong}}</text>
            <text class="step-text">{{texts.laborSongDesc}}</text>
        </view>
        <view class="step">
            <image src="/assets/images/2.png" mode="aspectFill"></image>
            <text class="step-title">{{texts.mountainSong}}</text>
            <text class="step-text">{{texts.mountainSongDesc}}</text>
        </view>
        <view class="step">
            <image src="/assets/images/3.png" mode="aspectFill"></image>
            <text class="step-title">{{texts.ritualSong}}</text>
            <text class="step-text">{{texts.ritualSongDesc}}</text>
        </view>
        <view class="step">
            <image src="/assets/images/4.png" mode="aspectFill"></image>
            <text class="step-title">{{texts.narrativeSong}}</text>
            <text class="step-text">{{texts.narrativeSongDesc}}</text>
        </view>
    </view>
</view>

<!-- 民歌艺术 -->
<view class="art">
    <text class="art-title">{{texts.artWorksTitle}}</text>
    <view class="art-list">
        <view class="art-item">
            <image src="/assets/images/gaohuang.png" mode="widthFix"></image>
            <text class="art-item-title">{{texts.gaohuang}}</text>
        </view>
        <view class="art-item">
            <image src="/assets/images/dayan.png" mode="widthFix"></image>
            <text class="art-item-title">{{texts.dayan}}</text>
        </view>
        <view class="art-item">
            <image src="/assets/images/songlang.png" mode="widthFix"></image>
            <text class="art-item-title">{{texts.songlang}}</text>
        </view>
        <view class="art-item">
            <image src="/assets/images/jizu.png" mode="widthFix"></image>
            <text class="art-item-title">{{texts.jizu}}</text>
        </view>
        <view class="art-item">
            <image src="/assets/images/caicha.png" mode="widthFix"></image>
            <text class="art-item-title">{{texts.caicha}}</text>
        </view>
        <view class="art-item">
            <image src="/assets/images/qianxi.png" mode="widthFix"></image>
            <text class="art-item-title">{{texts.qianxi}}</text>
        </view>
    </view>
</view>


<!-- 页脚 -->
<view class="footer">
    <text>{{texts.copyright}}</text>
</view>

</view>

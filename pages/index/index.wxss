/* 首页样式 - 使用统一设计系统 */

.container {
  padding: 0;
  background-color: var(--bg-primary);
}

/* ===== Banner轮播图 ===== */
.banner {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  border-radius: 0 0 var(--border-radius-lg) var(--border-radius-lg);
}

.carousel-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.5s ease-in-out;
}

.carousel-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: var(--text-white);
  text-align: center;
  line-height: 80rpx;
  font-size: var(--font-lg);
  border-radius: var(--border-radius);
  transition: all 0.3s ease;
}

.carousel-arrow.left {
  left: var(--spacing-md);
}

.carousel-arrow.right {
  right: var(--spacing-md);
}

.carousel-arrow:active {
  background-color: rgba(0, 0, 0, 0.8);
  transform: translateY(-50%) scale(0.95);
}

.banner-text {
  position: absolute;
  bottom: var(--spacing-xl);
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: var(--text-white);
  padding: 0 var(--spacing-lg);
  width: 100%;
}

.banner-title {
  font-size: var(--font-title);
  font-weight: bold;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.7);
  margin-bottom: var(--spacing-sm);
}

.banner-desc {
  font-size: var(--font-md);
  line-height: 1.4;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.6);
  opacity: 0.95;
}

/* ===== 轮播指示器 ===== */
.carousel-indicators {
  position: absolute;
  bottom: var(--spacing-lg);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: var(--spacing-sm);
  z-index: 10;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
  cursor: pointer;
}

.indicator.active {
  background-color: var(--text-white);
  transform: scale(1.2);
}

.indicator:active {
  transform: scale(1.1);
}

/* ===== 欢迎语区域 ===== */
.welcome {
  background: linear-gradient(135deg, var(--bg-light) 0%, #e8f4fd 100%);
  padding: var(--spacing-xl) var(--spacing-lg);
  text-align: center;
}

.welcome-title {
  font-size: var(--font-xl);
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: var(--spacing-lg);
  display: block;
}

.welcome-text {
  font-size: var(--font-md);
  line-height: 1.8;
  color: var(--text-secondary);
  display: block;
  max-width: 600rpx;
  margin: 0 auto var(--spacing-md);
}

/* ===== 非遗文化介绍 ===== */
.heritage {
  padding: var(--spacing-xl) var(--spacing-lg);
  background-color: var(--bg-primary);
}

.heritage-content {
  background: linear-gradient(135deg, var(--bg-light) 0%, #f0f8ff 100%);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-light);
}

.heritage-text {
  text-align: left;
}

.heritage-title {
  font-size: var(--font-xl);
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: var(--spacing-md);
  display: block;
}

.heritage-text-content {
  font-size: var(--font-md);
  line-height: 1.8;
  color: var(--text-secondary);
  display: block;
  margin-bottom: var(--spacing-md);
}

.heritage-link {
  margin-top: var(--spacing-lg);
  text-align: center;
}

.link-btn {
  display: inline-block;
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
  color: var(--text-white);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--border-radius-lg);
  font-size: var(--font-sm);
  font-weight: 500;
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  text-decoration: none;
}

.link-btn:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-medium);
}

/* ===== 传统艺术形式 ===== */
.process {
  padding: var(--spacing-xl) var(--spacing-lg);
  background: linear-gradient(135deg, var(--bg-light) 0%, #e8f4fd 100%);
  text-align: center;
}

.process-title {
  font-size: var(--font-xl);
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: var(--spacing-xl);
  display: block;
}

.process-steps {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
  justify-content: center;
}

.step {
  flex: 1 1 300rpx;
  max-width: 320rpx;
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
}

.step:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-medium);
}

.step image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
}

.step-title {
  font-size: var(--font-lg);
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  display: block;
}

.step-text {
  font-size: var(--font-sm);
  line-height: 1.6;
  color: var(--text-secondary);
  display: block;
}

/* ===== 民歌艺术精品 ===== */
.art {
  padding: var(--spacing-xl) var(--spacing-lg);
  background-color: var(--bg-primary);
  text-align: center;
}

.art-title {
  font-size: var(--font-xl);
  color: var(--primary-color);
  font-weight: 600;
  margin-bottom: var(--spacing-xl);
  display: block;
}

.art-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  align-items: center;
}

.art-item {
  width: 100%;
  max-width: 600rpx;
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
}

.art-item:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-medium);
}

.art-item image {
  width: 100%;
  height: 300rpx;
  object-fit: cover;
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
}

.art-item-title {
  font-size: var(--font-lg);
  color: var(--primary-color);
  font-weight: 600;
  display: block;
}

/* ===== 页脚 ===== */
.footer {
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--primary-dark) 100%
  );
  color: var(--text-white);
  text-align: center;
  padding: var(--spacing-lg);
  font-size: var(--font-sm);
}

/* ===== 响应式设计 ===== */
@media (max-width: 600rpx) {
  .banner {
    height: 400rpx;
  }

  .banner-title {
    font-size: var(--font-xl);
  }

  .process-steps {
    flex-direction: column;
    align-items: center;
  }

  .step {
    max-width: 100%;
  }
}

.container {
  width: 100%;
  margin: 0 auto;
  background-color: white;
  padding-top: 0;
}

/* Banner */
.banner {
  position: relative;
  width: 100%;
  height: 400px;
  overflow: hidden;
}
.carousel-image {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.carousel-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 40px;
  height: 40px;
  background-color: rgba(0,0,0,0.5);
  color: #fff;
  text-align: center;
  line-height: 40px;
  font-size: 24px;
  cursor: pointer;
}
.carousel-arrow.left { left: 10px; }
.carousel-arrow.right { right: 10px; }

.banner-mask {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  padding: 0 20rpx; /* 小屏幕适配 */
}
.banner-text {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
}
.banner-title {
  max-width: 90%;
  font-size: 28px;
  font-weight: bold;
  line-height: 1.4;
  text-align: center;
  text-shadow: 2rpx 2rpx 6rpx rgba(0,0,0,0.6); /* 阴影增强可读性 */
}
.banner-desc {
  font-size: 16px;
  margin-top: 10rpx;
  line-height: 1.4;
  text-shadow: 1rpx 1rpx 4rpx rgba(0,0,0,0.6);
}

/* 欢迎语 */
.welcome { text-align: center; padding: 20px; background-color: #f0f8ff; }
.welcome-title { font-size: 28px; color: #1a4780; display: block; margin-bottom: 20px; }
.welcome-text { font-size: 16px; line-height: 1.8; display: block; max-width: 800px; margin: 0 auto 10px; }

/* 非遗文化 */
.heritage-content { display: flex; flex-direction: row; max-width: 1200px; margin: 20px auto; background-color: #f0f8ff; border-radius: 10px; overflow: hidden; }
.heritage-image { flex: 1; }
.heritage-text { flex: 1; padding: 20px; }
.heritage-title { font-size: 24px; color: #1a4780; margin-bottom: 10px; display: block; }
.heritage-text-content { font-size: 16px; line-height: 1.8; display: block; margin-bottom: 10px; }

/* 工艺流程 */
.process { padding: 20px; background-color: #f0f8ff; text-align: center; }
.process-title { font-size: 24px; color: #1a4780; margin-bottom: 20px; display: block; }
.process-steps { display: flex; flex-wrap: wrap; justify-content: space-around; }
.step { flex: 1 1 22%; margin: 10px; text-align: center; }
.step img { width: 100%; height: 150px; object-fit: cover; border-radius: 8px; }
.step-title { font-size: 18px; color: #1a4780; display: block; margin-top: 10px; }
.step-text { font-size: 14px; line-height: 1.6; display: block; }

/* 民歌艺术 */
.art {
  padding: 20px;
  text-align: center;
}
.art-title {
  font-size: 28px;
  color: #1a4780;
  margin-bottom: 30px;
  display: block;
}

/* 作品列表 */
.art-list {
  display: flex;
  flex-direction: column; /* 每行一个作品 */
  align-items: center;
}

/* 单个作品 */
.art-item {
  width: 100%;           /* 容器更宽，靠近屏幕宽度 */
  margin-bottom: 40px;  /* 作品间距更大 */
  text-align: center;
}

.art-item image {
  width: 100%;
  height: 400px; /* 高度自适应，完整显示 */
  object-fit: contain;
  border-radius: 8px;
  box-shadow: 0 6px 12px rgba(0,0,0,0.15);
}

.art-item-title {
  display: block;
  margin-top: 12px;
  font-size: 18px;
  color: #1a4780;
}

/* 页脚 */
.footer { text-align: center; padding: 10px; background-color: #1a4780; color: white; font-size: 14px; }

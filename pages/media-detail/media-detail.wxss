/* 媒体详情页面样式 */
.container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 返回按钮 */
.back-btn {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 1000;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: scale(0.95);
}

.back-icon {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: bold;
}

.back-text {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 视频容器 */
.video-container {
  margin-top: 80rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.video-player {
  width: 100%;
  height: 400rpx;
  background: #000;
}

/* 音频容器 */
.audio-container {
  margin-top: 80rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

/* 音频封面 */
.audio-cover {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.cover-image {
  width: 100%;
  height: 100%;
}

/* 音频信息 */
.audio-info {
  margin-bottom: 40rpx;
}

.audio-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
  display: block;
}

.audio-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.4;
  display: block;
}

/* 进度条容器 */
.progress-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.time-text {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 500;
  min-width: 60rpx;
  text-align: center;
}

.progress-slider {
  flex: 1;
  height: 40rpx;
}

/* 播放控制 */
.audio-controls {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.play-btn:active {
  transform: scale(0.95);
}

.play-icon {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

/* 模式切换按钮 */
.mode-switch {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.switch-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #2c3e50;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.switch-btn:active {
  transform: scale(0.95);
  background: white;
}

/* 歌词容器 */
.lyrics-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.lyrics-placeholder {
  font-size: 28rpx;
  color: #7f8c8d;
  font-style: italic;
}

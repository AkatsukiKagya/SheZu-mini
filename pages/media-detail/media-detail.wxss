.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 20rpx;
}

.back-btn {
  font-size: 28rpx;
  color: #1a4780;
  cursor: pointer;
}

.video-player, .audio-player {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background-color: #000;
  margin-bottom: 20rpx;
}

.controls {
  text-align: center;
  margin-bottom: 20rpx;
}

.controls button {
  background-color: #1a4780;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.desc .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a4780;
}

.desc .description {
  font-size: 28rpx;
  margin-top: 10rpx;
}

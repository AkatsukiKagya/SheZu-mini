<view class="container">
  <!-- 语言切换器 -->
  <language-switcher position="top-right" bind:languageChanged="onLanguageChanged"></language-switcher>

  <!-- 返回按钮 -->
  <view class="back-btn" bindtap="goBack">
    <text class="back-icon">←</text>
    <text class="back-text">{{texts.back}}</text>
  </view>

  <!-- 使用通用播放器组件 -->
  <media-player media="{{media}}"></media-player>

  <!-- 预留歌词区域 -->
  <view class="lyrics-container" wx:if="{{mode === 'audio'}}">
    <text class="lyrics-placeholder">歌词功能即将推出...</text>
  </view>

</view>

/* 父容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  min-height: 100vh;
  background-color: #f6f8fa;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* 顶部logo标题 */
.header {
  display: flex;
  align-items: center;
  width: 90%;
  padding: 20rpx 0;
  margin-top: 20rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  color: #005B6B;
  margin-left: 20rpx;
}

/* 图片轮播 */
.image-swiper {
  width: 90%;
  height: 360rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 简介区 */
.intro {
  width: 90%;
  margin-top: 30rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.08);
  font-size: 28rpx;
  color: #444;
  line-height: 1.6;
  text-align: justify;
}

/* 导航区域整体 */
.nav-area {
  width: 90%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个导航卡片 */
.nav-card {
  background-color: #005B6B;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  color: #ffffff;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.15);
  transition: transform 0.2s;
}

.nav-card:active {
  transform: scale(0.97);
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
}

.nav-text {
  flex: 1;
  margin-left: 20rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-subtitle {
  font-size: 24rpx;
  opacity: 0.8;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
}

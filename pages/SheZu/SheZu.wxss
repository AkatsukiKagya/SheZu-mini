/* 畲族介绍页面样式 - 使用统一设计系统 */

.container {
  background: linear-gradient(135deg, var(--bg-light) 0%, #e8f4fd 100%);
  min-height: 100vh;
  padding: var(--spacing-lg);
  position: relative;
}

/* ===== 返回按钮 ===== */
.back-btn-wrapper {
  position: fixed;
  top: var(--spacing-lg);
  left: var(--spacing-md);
  z-index: 1000;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: var(--font-md);
  color: var(--text-primary);
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  text-decoration: none;
}

.back-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 1);
}

/* ===== 页面标题 ===== */
.title {
  font-size: var(--font-title);
  font-weight: 600;
  text-align: center;
  margin-bottom: var(--spacing-xl);
  margin-top: var(--spacing-xl);
  color: var(--primary-color);
  padding: var(--spacing-lg) 0;
  background: linear-gradient(135deg, var(--bg-primary) 0%, #f8f9fa 100%);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-light);
}

/* ===== 内容区域 ===== */
.content {
  max-width: 700rpx;
  margin: 0 auto;
}

/* ===== 章节卡片 ===== */
.section {
  background-color: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(
    90deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
}

.section:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-medium);
}

.section-title {
  font-size: var(--font-xl);
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: var(--spacing-md);
  display: block;
  line-height: 1.3;
}

.section-text {
  font-size: var(--font-md);
  line-height: 1.8;
  color: var(--text-secondary);
  text-align: justify;
}

/* ===== 图片样式 ===== */
.image {
  width: 100%;
  margin: var(--spacing-lg) 0;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light);
  transition: all 0.3s ease;
}

.image:active {
  transform: scale(0.98);
}

/* ===== 特色内容块 ===== */
.highlight {
  background: linear-gradient(135deg, var(--bg-light) 0%, #f0f8ff 100%);
  border-left: 6rpx solid var(--primary-color);
  padding: var(--spacing-lg);
  margin: var(--spacing-lg) 0;
  border-radius: 0 var(--border-radius) var(--border-radius) 0;
}

.highlight .section-title {
  color: var(--primary-dark);
  font-size: var(--font-lg);
}

.highlight .section-text {
  color: var(--text-primary);
  font-weight: 500;
}

/* ===== 列表样式 ===== */
.feature-list {
  list-style: none;
  padding: 0;
  margin: var(--spacing-md) 0;
}

.feature-list .list-item {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
  padding: var(--spacing-sm);
  background-color: var(--bg-secondary);
  border-radius: var(--border-radius);
}

.feature-list .list-item::before {
  content: "•";
  color: var(--primary-color);
  font-weight: bold;
  font-size: var(--font-lg);
  flex-shrink: 0;
  margin-top: 2rpx;
}

/* ===== 引用样式 ===== */
.quote {
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--primary-light) 100%
  );
  color: var(--text-white);
  padding: var(--spacing-lg);
  border-radius: var(--border-radius-lg);
  margin: var(--spacing-lg) 0;
  text-align: center;
  position: relative;
}

.quote::before {
  content: '"';
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.3);
  position: absolute;
  top: var(--spacing-sm);
  left: var(--spacing-md);
}

.quote::after {
  content: '"';
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.3);
  position: absolute;
  bottom: var(--spacing-sm);
  right: var(--spacing-md);
}

.quote .section-text {
  color: var(--text-white);
  font-style: italic;
  font-size: var(--font-lg);
  line-height: 1.6;
}

/* ===== 响应式设计 ===== */
@media (max-width: 600rpx) {
  .container {
    padding: var(--spacing-md);
  }

  .title {
    font-size: var(--font-xl);
    padding: var(--spacing-md) 0;
  }

  .section {
    padding: var(--spacing-lg);
  }

  .section-title {
    font-size: var(--font-lg);
  }

  .section-text {
    font-size: var(--font-sm);
  }

  .quote .section-text {
    font-size: var(--font-md);
  }
}

/* pages/SheZu/SheZu.wxss */
.container {
  padding: 20rpx;
  background: #f9f9f9;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #c33;
}

.section {
  margin-bottom: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: #333;
}

.section-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
}

.image {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

.container {
  padding: 20rpx;
  background-color: #f0f8ff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.media-item {
  width: 600rpx; /* 统一宽度 */
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.media-row {
  display: flex;
  align-items: center;
}

.play-icon {
  font-size: 36rpx;
  color: #1a4780;
  margin-right: 20rpx;
  cursor: pointer;
}

.media-info {
  flex: 1;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a4780;
  margin-bottom: 6rpx;
}

.desc {
  font-size: 24rpx;
  color: #555;
  line-height: 1.6;
}

.placeholder {
  font-size: 24rpx;
  color: #999;
  text-align: center; /* 底部文字居中 */
}

.footer {
  text-align: center; 
  padding: 10px;
  color: white; 
  font-size: 14px; 
}
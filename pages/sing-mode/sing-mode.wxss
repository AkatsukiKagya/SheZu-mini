.sing-mode {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #fffdf8;
  height: 100vh;
  padding: 60rpx 20rpx;
  box-sizing: border-box;
}

.song-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #d84315;
  margin-bottom: 40rpx;
  text-align: center;
}

.audio-player {
  width: 100%;
}

.hint {
  margin-top: 60rpx;
  font-size: 28rpx;
  color: #555;
}
